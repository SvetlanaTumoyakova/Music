@{
    ViewData["Title"] = "ArtistAlbums";
}
@model Artist
<div class="artist-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-9 mt-4 mt-md-0">
                <h1>@Model.Name</h1>
            </div>
        </div>
    </div>
</div>
<div class="container py-5">
    <h1 class="text-center mb-5 display-4">Альбомы</h1>
    <div class="row">
        @foreach (var album in Model.Albums)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card album-card">
                    <img src="@album.UrlImg" class="card-img-top img-contain" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@album.Name</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>