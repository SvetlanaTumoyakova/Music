@{
    ViewData["Title"] = "Albums";
}
@model Artist
<div class="container py-5">
    <h1 class="text-center mb-5 display-4">Популярные Альбомы</h1>
    <form asp-controller="Home" asp-action="Details">
        <input type="hidden" name="artistId" value="@Model.Id" />
        <p>
            <label>Название: <input type="text" name="name" /></label>
            <input type="submit" value="Поиск" />
        </p>
    </form>
    <div class="row">
        @foreach (var album in Model.Albums)
        {
            <div class="col-md-5 col-lg-3">
                <div class="card-three album-card">
                    <img src="@album.UrlImg" class="card-img-top img-contain" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@album.Name</h5>
                        <a class="btn btn-primary" asp-controller="Album" asp-action="Details" asp-route-id="@album.Id">Перейти</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>