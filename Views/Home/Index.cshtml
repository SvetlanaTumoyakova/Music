@{
    ViewData["Title"] = "Home Page";
}
@model List<Artist>
<div class="container py-3">
    <h1 class="text-center mb-4 display-5">Популярные Артисты</h1>


    <a class="btn btn-primary mb-3" asp-controller="Home" asp-action="Create">Добавить нового исполнителя</a>
    <div class="row">
        @foreach (var artist in Model)
        {
            <div class="col-md-6 col-lg-3">
                <div class="card album-card">
                    <img src="@artist.UrlImg" class="card-img-top" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@artist.Name</h5>
                    </div>
                    <div class="container d-flex justify-content-start w-100 p-2 pb-2">
                        <a class="btn btn-primary me-2" asp-controller="Home" asp-action="Details" asp-route-id="@artist.Id">Перейти</a>
                        <a class="btn btn-primary me-2" asp-controller="Home" asp-action="Edit" asp-route-id="@artist.Id">Редактировать</a>
                        <form asp-controller="Home" asp-action="Delete" method="post" class="mb-0">
                            <input type="hidden" name="id" value="@artist.Id" />
                            <button type="submit" class="btn btn-primary">Удалить</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>