@{
	ViewData["Title"] = "Albums";
}
@model List<Album>
<div class="container py-5">
    <h1 class="text-center mb-4 display-5">Популярные Альбомы</h1>
    <a class="btn btn-primary mb-3" asp-controller="Album" asp-action="Create">Добавить новый альбом</a>
    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-md-5 col-lg-3">
                <div class="card-two album-card marginButtom" >
                    <img src="@album.UrlImg" class="card-img-top-album" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@album.Name</h5>
                    </div>
                    <div class="container d-flex justify-content-start w-100 pb-4 ps-2 mb-0">
                    <a class="btn btn-primary" asp-controller="Album" asp-action="Details" asp-route-id="@album.Id">Перейти</a>
                    </div>
                    <div class="container d-flex justify-content-start w-100 pb-4 ps-2">
                        <a class="btn btn-primary me-2" asp-controller="Album" asp-action="Edit" asp-route-id="@album.Id">Редактировать</a>
                        <form asp-controller="Album" asp-action="Delete" method="post" class="mb-0">
                            <input type="hidden" name="id" value="@album.Id" />
                            <button type="submit" class="btn btn-primary">Удалить</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>