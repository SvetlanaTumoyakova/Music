@{
	ViewData["Title"] = "Songs";
}
@model Album

<div class="album-header mb-5">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-mb-3 text-center text-md-start">
				<img src="@Model.UrlImg"
					 alt="Обложка альбома"
					 class="img-contain rounded album-cover card-three" />
				<h1>@Model.Name</h1>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-8">
			<div class="track-list">
				@for (int i = 0; i < Model.Songs.Count; i++)
				{
					var song = Model.Songs[i];
					<div class="track-item">
						<div class="track-info">
							<h6 class="mb-2">@(i + 1) @song.Name</h6>
						</div>
						<audio controls class="audio-player mb-4">
							<source src="@song.UrlSong" type="audio/mpeg"/>
							Ваш браузер не поддерживает аудиоформат.
						</audio>
					</div>
				}
			</div>
		</div>
	</div>
</div>